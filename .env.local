# Local Development Environment for Everlight API
# Copy this to .env and update with your actual values

# Database Configuration (will be updated by start script)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:54322/postgres

# Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-service-account.json

# Google Gemini API (required for embeddings)
GEMINI_API_KEY=your_gemini_api_key_here

# Notion Integration (optional)
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret
NOTION_REDIRECT_URI=http://localhost:5173/auth/notion/callback

# AI Agent Service Configuration
AI_AGENT_SERVICE_URL=http://localhost:8001
AI_AGENT_SERVICE_TOKEN=optional_bearer_token_for_auth

# Google Cloud Tasks Emulator Configuration
CLOUD_TASKS_EMULATOR_HOST=localhost:8085
GOOGLE_CLOUD_PROJECT=everlight-459519
GOOGLE_CLOUD_LOCATION=us-west1

# Firebase Configuration
FIREBASE_PROJECT_ID=everlight-459519